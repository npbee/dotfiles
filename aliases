# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'

# git
alias g="git status"

# dotfiles
alias dotfiles="cd ~/.dotfiles"

# home folder
alias home="cd ~"

# projects
alias projects="cd ~/Projects"

# Show hidden files
alias showhidden="defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app"

# Hide hidden files
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app"

# source zshrc
alias sourcezsh="source ~/.zshrc"

# get public IP
alias ip="curl ipecho.net/plain ; echo"

# Show all aliases
alias alis='cat ~/.aliases'

# jrnl {{{
alias d="jrnl -from 'today' -and @daily --edit"
alias w="jrnl @weekly -n 1 --edit"
alias j="jrnl"
# }}}

# quickly open up color scheme {{{
alias colorscheme="nvim ~/code/eighty-five/colors/eighty-five.vim"
# }}}

# todo.txt
alias t=todo.sh

alias m=monthly

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
