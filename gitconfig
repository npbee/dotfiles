[push]
    default = current
[color]
    ui = auto
[alias]
    aa = add --all
    ap = add --patch
    ca = commit --amend
    ci = commit --verbose
    cm = !git add -A && git commit -m
    wip = !git add -A && git commit -m "WIP"
    co = checkout
    st = status
    s  = switch
    stpp = subtree push --prefix
    l = "!source ~/.githelpers && pretty_git_log"
    b = "!source ~/.githelpers && pretty_git_branch"
    bs = "!source ~/.githelpers && pretty_git_branch_sorted"
    hp = "!. ~/.githelpers && show_git_head"
    db = "!. ~/.githelpers && pretty_git_diff_branch"
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    editor = "nvim"
[merge]
[include]
    path = .gitconfig.local
[commit]
    template = ~/.gitmessage
[fetch]
    prune = true
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[http]
    postBuffer = 52428800
[color "diff-highlight"]
    oldNormal = "#E25C5C" bold
    oldHighlight = white bold "#e07d7d"
    newNormal = "#7DA76B" bold
    newHighlight = white bold "#7DA76B"
[color "decorate"]
    branch = green
    remoteBranch = red
[color "diff"]
    ; Meta info at top
    meta = white

    ; Hunk header
    ; frag = magenta dim
    frag = "#D3AF64" ; purple
    ; commit = yellow bold

    ; Removed lines
    ; red bold
    old = "#E25C5C" bold

    ; Added lines
    ; green bold
    new = "#7DA76B" bold
    whitespace = red reverse
[color "status"]
    header = "#CFBC97" ; grey
    ; changed = red
    changed = "#E25C5C"
    untracked = yellow
[include]
  path = /Users/npbee/.netlify/helper/git-config
[init]
	defaultBranch = main
[user]
	name = Nick Ball
	email = nick@npbee.me
[dbx]
	messagedisplayversion = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
