[push]
    default = current
[color]
    ui = auto
[alias]
    aa = add --all
    ap = add --patch
    ca = commit --amend
    ci = commit --verbose
    co = checkout
    st = status
    stpp = subtree push --prefix
    l = "!source ~/.githelpers && pretty_git_log"
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    editor = "nvim"
    pager = "diff-so-fancy | less --tabs=4 -RFX"
[merge]
[include]
    path = .gitconfig.local
[commit]
    template = ~/.gitmessage
[fetch]
    prune = true
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[http]
    postBuffer = 52428800
[color "diff-highlight"]
    oldNormal = "#E25C5C" bold
    oldHighlight = white bold "#e07d7d"
    newNormal = "#7DA76B" bold
    newHighlight = white bold "#7DA76B"
[color "decorate"]
    branch = green
    remoteBranch = red
[color "diff"]
    ; Meta info at top
    meta = white

    ; Hunk header
    ; frag = magenta dim
    frag = "#D3AF64" ; purple
    ; commit = yellow bold

    ; Removed lines
    ; red bold
    old = "#E25C5C" bold

    ; Added lines
    ; green bold
    new = "#7DA76B" bold
    whitespace = red reverse
[color "status"]
    header = "#CFBC97" ; grey
    ; changed = red
    changed = "#E25C5C"
    untracked = yellow
